{
  "name": "social-service-ea",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node --trace-warnings --abort-on-uncaught-exception --unhandled-rejections=strict dist/index.js",
    "dev": "nodemon --watch 'src/**' --ext 'ts,json' --ignore 'src/**/*.spec.ts' --ignore 'src/migrations' --exec 'ts-node src/index.ts'",
    "pretest": "yarn test:integration:before",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose -c jest.config.all.js",
    "test:unit": "jest --forceExit --detectOpenHandles --coverage --verbose -c jest.config.js",
    "test:unit:watch": "jest --watch --verbose -c jest.config.js --coverage",
    "test:integration:before": "docker compose up -d --wait redis nats localstack",
    "test:integration": "yarn test:integration:before && NODE_OPTIONS='--max_old_space_size=4096' jest --forceExit --detectOpenHandles --coverage --verbose -c jest.integration.config.js --runInBand",
    "test:integration:watch": "jest --watch --verbose -c jest.integration.config.js --runInBand --coverage",
    "migrate": "node-pg-migrate --database-url-var PG_COMPONENT_PSQL_CONNECTION_STRING --envPath .env -j ts --tsconfig tsconfig.json -m ./src/migrations",
    "lint:check": "eslint '**/*.{js,ts}'",
    "lint:fix": "eslint '**/*.{js,ts}' --fix"
  },
  "devDependencies": {
    "@dcl/eslint-config": "^2.2.1",
    "@protobuf-ts/protoc": "^2.9.4",
    "@types/node": "^20.12.7",
    "@types/redis": "^4.0.11",
    "@types/ws": "^8.5.10",
    "@well-known-components/test-helpers": "^1.5.6",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "tabWidth": 2
  },
  "dependencies": {
    "@aws-sdk/client-sns": "^3.734.0",
    "@dcl/platform-crypto-middleware": "^1.1.0",
    "@dcl/protocol": "https://sdk-team-cdn.decentraland.org/@dcl/protocol/branch//dcl-protocol-1.0.0-14523877809.commit-39c10e9.tgz",
    "@dcl/rpc": "^1.1.2",
    "@dcl/schemas": "^16.0.0",
    "@sentry/node": "^9.12.0",
    "@well-known-components/env-config-provider": "^1.2.0",
    "@well-known-components/fetch-component": "^2.0.2",
    "@well-known-components/http-server": "^2.1.0",
    "@well-known-components/interfaces": "^1.4.3",
    "@well-known-components/logger": "^3.1.3",
    "@well-known-components/metrics": "^2.1.0",
    "@well-known-components/nats-component": "^2.0.0",
    "@well-known-components/pg-component": "^0.2.2",
    "@well-known-components/uws-http-server": "^0.0.2",
    "dcl-catalyst-client": "^21.7.0",
    "decentraland-crypto-fetch": "^2.0.1",
    "dotenv": "^16.4.7",
    "fp-future": "^1.0.1",
    "lru-cache": "^10.4.3",
    "mitt": "^3.0.1",
    "nock": "^14.0.1",
    "redis": "^4.7.0",
    "sql-template-strings": "^2.2.2",
    "ws": "^8.16.0"
  }
}
